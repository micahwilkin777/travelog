<% content_for :page_title do %>
<%= 'Forgot Password - Travelog.com' %>
<% end %>

<section class="content-7 v-center">
	<div class="container">
		<!-- Projects Row -->
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3 access-page text-center">
				<div class="users-form-container">
					<h4>Forgot your password?</h4>
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class => 'text-left' }) do |f| %>
					<%= devise_error_messages! %>

					<div class="form-group">
						<%= f.label :email %><br />
						<%= f.email_field :email, autofocus: true, :class=>'form-control' %>
					</div>


					<%= f.submit "Send Reset Link", :class=> 'btn btn-default access-btn', :style => 'margin-bottom: 28px;' %>

					<% end %>

					<div class="col-md-12 text-center">
						<p>Back to <strong><%= link_to "Sign In", new_user_session_path %></strong></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
