<section class="greysection merchantdetail">
	<div class="container-result">
		<div class="container result-content-suggestions">
			<div class="row">

				<div class="col-xs-12 col-sm-6 col-md-6 about-host">
					<div class="col-xs-12">
						<h4>About the Merchant, <%= @user.store_setting.store_name.capitalize if @user.profile.present? %></h4>
					</div>
					<div class="col-xs-12">
					 <div class="col-xs-12 col-sm-3 col-md-3 paddingzero about-host-img">
						<a href="#">
						 	<% if @user.get_store_thumb_url.present? %>
								<img src="<%= @user.get_store_thumb_url %>" class="img-circle img-responsive">
							<% else %>
								<img src="<%= asset_url('default-avatar.png') %>" class="img-circle img-responsive">
							<% end %>
						</a>
					 </div>
					 <div class="col-xs-12 col-sm-9 col-md-9 paddingzero">
							
							<p> <%= @user.store_setting.city if @user.store_setting.present? %>, <%= @user.store_setting.country if @user.store_setting.present? %><br>
								Member since <%= @user.store_setting.created_at.strftime('%B %Y') if @user.store_setting.present? %></p>
							
							<!-- <a href="#" class="contacthost-btn">Contact Host</a> -->
						</div>
					</div>
				</div>

			</div>

			<hr>
			<div class="row">
				<div class="col-md-12 titledistance text-left">
					<h5>You may also like</h5>
				</div>

				<% @same_city_products.each do |product| %>
					<div class="col-xs-12 col-sm-6 col-md-3">
						<p class="price">
						<% if product.product_discount != 1 %>
							From <strike><em><%= @current_currency %></em><%= product.price_with_currency %></strike>
							<br>
							<%= @current_currency %> <%= (product.price_with_currency.to_d * product.product_discount).round(2) %>
						<% else %>
							<%= @current_currency %> <%= product.price_with_currency %>
						<% end %>

						</p>
						<p class="heart-wrapper ">
							<!-- <input id="heart8" type="checkbox" class="heart-checkbox" />
							<label for="heart8"> </label> -->
						</p>
						<a href="<%= product_path product %>"><img src="<%= product.store_logo_url %>" class="img-circle user-thumb" width="52" /></a>
						<div class="content-suggestions">
							<a href="<%= product_path product %>">
								<img class="" src="<%= product.product_attachments.first.attachment.square.url if product.product_attachments.first.present? && product.product_attachments.first.attachment.present? %>" alt="<%= product.name %>">
							</a>
						</div>
						<h4>
							<a href="<%= product_path product %>"><%=h truncate(product.name, :length => 20) %></a>
						</h4>
						<a href="<%= product_path product %>">
							<p><%= product.city %>, <%= product.country %>
							</p>
							<p class="star-rating">
								<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 0 %>"></span>
								<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 1 %>"></span>
								<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 2 %>"></span>
								<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 3 %>"></span>
								<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 4 %>"></span>
							</p>
						</a>
						<p></p>
					</div>
				<% end %>
				
				<% if @kl_products.present? && @kl_products.count > 0 %>
					<% @kl_products.each do |product| %>
						<div class="col-xs-12 col-sm-6 col-md-3">
							<p class="price">
							<% if product.product_discount != 1 %>
								From <strike><em><%= @current_currency %></em><%= product.price_with_currency %></strike>
								<br>
								<%= @current_currency %> <%= (product.price_with_currency.to_d * product.product_discount).round(2) %>
							<% else %>
								<%= @current_currency %> <%= product.price_with_currency %>
							<% end %>

							</p>
							<p class="heart-wrapper ">
								<!-- <input id="heart8" type="checkbox" class="heart-checkbox" />
								<label for="heart8"> </label> -->
							</p>
							<a href="<%= product_path product %>"><img src="<%= product.store_logo_url %>" class="img-circle user-thumb" width="52" /></a>
							<div class="content-suggestions">
								<a href="<%= product_path product %>">
									<img class="" src="<%= product.product_attachments.first.attachment.square.url if product.product_attachments.first.present? && product.product_attachments.first.attachment.present? %>" alt="<%= product.name %>">
								</a>
							</div>
							<h4>
								<a href="<%= product_path product %>"><%=h truncate(product.name, :length => 20) %></a>
							</h4>
							<a href="<%= product_path product %>">
								<p><%= product.city %>, <%= product.country %>
								</p>
								<p class="star-rating">
									<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 0 %>"></span>
									<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 1 %>"></span>
									<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 2 %>"></span>
									<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 3 %>"></span>
									<span class="glyphicon glyphicon-star <%= 'empty-star' if product.review_mark <= 4 %>"></span>
								</p>
							</a>
							<p></p>
						</div>
					<% end %>
				<% end %>


			</div>

		</div>
	</div>
</section>